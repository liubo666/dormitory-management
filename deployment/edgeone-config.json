{
  "edgeone": {
    "zone": "ap-guangzhou",
    "staticSite": {
      "name": "dormitory-management-frontend",
      "domain": "dormitory.yourdomain.com",
      "defaultIndexFile": "index.html",
      "errorPages": {
        "404": "/404.html",
        "500": "/500.html"
      },
      "cacheConfig": {
        "ttl": 86400,
        "cacheRules": [
          {
            "fileType": ["js", "css"],
            "ttl": 31536000,
            "browserCache": true
          },
          {
            "fileType": ["png", "jpg", "jpeg", "gif", "ico", "svg"],
            "ttl": 2592000,
            "browserCache": true
          },
          {
            "fileType": ["html"],
            "ttl": 3600,
            "browserCache": false
          }
        ]
      },
      "https": {
        "enabled": true,
        "forceRedirect": true,
        "http2": true
      },
      "compression": {
        "enabled": true,
        "types": ["text/html", "text/css", "text/javascript", "application/javascript", "application/json", "application/xml"]
      }
    },
    "apiProxy": {
      "enabled": true,
      "backendUrl": "https://api.dormitory.yourdomain.com",
      "pathMapping": {
        "/api/*": "https://api.dormitory.yourdomain.com/api/*"
      },
      "headers": {
        "X-Forwarded-For": "$client_ip",
        "X-Forwarded-Proto": "$scheme",
        "X-Real-IP": "$client_ip"
      }
    }
  },
  "build": {
    "frontend": {
      "distPath": "frontend/dist",
      "publicPath": "/dist/",
      "assetsPath": "assets",
      "excludeFiles": [
        "*.map",
        "node_modules/**",
        ".git/**",
        "*.log"
      ]
    },
    "backend": {
      "jarName": "dormitory-management-1.0.0.jar",
      "targetPath": "backend/target",
      "profiles": "prod"
    }
  },
  "security": {
    "headers": {
      "X-Frame-Options": "DENY",
      "X-Content-Type-Options": "nosniff",
      "X-XSS-Protection": "1; mode=block",
      "Strict-Transport-Security": "max-age=31536000; includeSubDomains",
      "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://api.dormitory.yourdomain.com'"
    },
    "rateLimit": {
      "enabled": true,
      "requestsPerMinute": 60,
      "burstSize": 100
    }
  },
  "monitoring": {
    "accessLog": {
      "enabled": true,
      "retentionDays": 30,
      "format": "combined"
    },
    "errorLog": {
      "enabled": true,
      "retentionDays": 7,
      "alertThreshold": 10
    }
  }
}