{
  "project": {
    "name": "宿舍管理系统",
    "version": "1.0.0",
    "description": "智能宿舍管理系统，提供宿舍分配、学生管理、费用管理等功能",
    "author": "Dormitory Management Team",
    "buildDate": "2025-11-16"
  },
  "edgeone": {
    "staticSite": {
      "name": "dormitory-management",
      "domain": "dormitory.yourdomain.com",
      "region": "ap-guangzhou",
      "indexPage": "index.html",
      "errorPages": {
        "404": "404.html",
        "500": "500.html"
      },
      "cacheConfig": {
        "cacheRules": [
          {
            "fileType": ["js", "css"],
            "ttl": 31536000,
            "browserCache": true,
            "compress": true
          },
          {
            "fileType": ["png", "jpg", "jpeg", "gif", "ico", "svg", "webp"],
            "ttl": 2592000,
            "browserCache": true,
            "compress": true
          },
          {
            "fileType": ["html", "htm", "json", "xml", "txt"],
            "ttl": 3600,
            "browserCache": true,
            "compress": true
          },
          {
            "fileType": ["woff", "woff2", "ttf", "eot"],
            "ttl": 604800,
            "browserCache": true,
            "compress": true
          }
        ],
        "defaultTTL": 86400
      },
      "https": {
        "enabled": true,
        "forceRedirect": true,
        "http2": true,
        "certificates": "auto"
      },
      "compression": {
        "enabled": true,
        "types": [
          "text/html",
          "text/css",
          "text/javascript",
          "application/javascript",
          "application/json",
          "application/xml",
          "text/xml"
        ],
        "level": 6
      },
      "security": {
        "headers": {
          "X-Frame-Options": "DENY",
          "X-Content-Type-Options": "nosniff",
          "X-XSS-Protection": "1; mode=block",
          "Strict-Transport-Security": "max-age=31536000; includeSubDomains; preload",
          "Referrer-Policy": "strict-origin-when-cross-origin",
          "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://api.dormitory.yourdomain.com'"
        },
        "rateLimit": {
          "enabled": true,
          "requestsPerMinute": 60,
          "burstSize": 100,
          "whiteList": ["*"]
        }
      }
    },
    "apiConfig": {
      "backendUrl": "https://api.dormitory.yourdomain.com",
      "proxyRules": [
        {
          "path": "/api/*",
          "target": "${backendUrl}/api/*",
          "timeout": 30000,
          "retries": 3
        }
      ]
    }
  },
  "build": {
    "frontend": {
      "sourceDir": "frontend",
      "distDir": "frontend/dist",
      "publicDir": "frontend/public",
      "buildCommand": "npm run build",
      "outputFiles": {
        "static": [
          "assets/**/*",
          "favicon.ico",
          "logo-placeholder.svg",
          "apple-touch-icon.png",
          "logo-192.png",
          "site.webmanifest",
          "*.html"
        ]
      }
    },
    "optimization": {
      "minify": {
        "enabled": true,
        "removeComments": true,
        "removeConsoleLogs": true
      },
      "bundle": {
        "enabled": true,
        "splitChunks": true,
        "manualChunks": {
          "vendor": ["vue", "vue-router", "pinia"],
          "element": ["element-plus", "@element-plus/icons-vue"],
          "utils": ["axios", "dayjs", "@vueuse/core"]
        }
      }
    },
    "verification": {
      "checks": [
        "html-validation",
        "css-validation",
        "js-syntax",
        "resource-optimization",
        "accessibility"
      ]
    }
  },
  "deployment": {
    "steps": [
      {
        "name": "构建检查",
        "description": "验证项目构建状态"
      },
      {
        "name": "生成生产版本",
        "description": "构建前端生产版本"
      },
      {
        "name": "资源优化",
        "description": "压缩和优化静态资源"
      },
      {
        "name": "创建部署包",
        "description": "打包所有部署文件"
      },
      {
        "name": "配置验证",
        "description": "验证EdgeOne配置"
      },
      {
        "name": "上传准备",
        "description": "准备上传到EdgeOne"
      }
    ]
  }
}